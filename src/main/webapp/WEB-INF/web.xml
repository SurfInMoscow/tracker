<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>UserRegistrationServlet</servlet-name>
        <servlet-class>ru.vorobyev.tracker.web.UserRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegistrationServlet</servlet-name>
        <url-pattern>/tracker</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WorkingSpaceServlet</servlet-name>
        <servlet-class>ru.vorobyev.tracker.web.ProjectsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WorkingSpaceServlet</servlet-name>
        <url-pattern>/projects</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IssuesServlet</servlet-name>
        <servlet-class>ru.vorobyev.tracker.web.IssuesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IssuesServlet</servlet-name>
        <url-pattern>/issues</url-pattern>
    </servlet-mapping>

</web-app>